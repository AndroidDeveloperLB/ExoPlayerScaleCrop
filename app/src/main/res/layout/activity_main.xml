        <!--app:keep_content_on_player_reset="true" app:resize_mode="zoom" app:surface_type="surface_view"-->
        <!--app:use_controller="false" tools:foreground="#33ff0000"/>-->

        <TextureView
            android:id="@+id/textureView" android:layout_width="match_parent" android:layout_height="match_parent"
            tools:foreground="#33ff0000"/>

        <ImageView
            android:id="@+id/imageView" android:layout_width="match_parent" android:layout_height="match_parent"
            android:scaleType="matrix" tools:scaleType="centerCrop" tools:src="@drawable/test"/>
    </androidx.cardview.widget.CardView>

</FrameLayout>
